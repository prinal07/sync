<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CeoWork"
    android:background="@drawable/gradient_cashncarry">



    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:fontFamily="@font/lovelo"
        android:gravity="center"
        android:textSize="55dp"
        android:text="Workspace"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/text">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:padding="20dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/employeeCard"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="20dp">

                <TextView
                    android:background="@drawable/cardview_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Employee Salary"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:fontFamily="@font/inter"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>



        <LinearLayout
            android:padding="20dp"
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:layout_below="@id/layout1">

            <androidx.cardview.widget.CardView
                android:id="@+id/stockCard"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">
                android:padding="20dp">

                <TextView
                    android:background="@drawable/cardview_style2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Product Catalogue"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="@font/inter"
                    android:textSize="20dp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>






    </RelativeLayout>


    <LinearLayout
        android:id="@+id/toolbar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:weightSum="4"
        >

        <ImageButton
            android:id="@+id/homebtn"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:src="@drawable/ic_home_black_24dp"
            android:background="#00000000"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/targetsbtn"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/ic_attach_money_black_24dp" />

        <ImageButton
            android:id="@+id/chatbtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_textsms_black_24dp"
            android:background="#00000000"
            android:layout_weight="1"
            />

        <ImageButton
            android:id="@+id/groupworkbtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_shopping_cart_24"
            android:background="#00000000"
            android:layout_weight="1"

            />

    </LinearLayout>

</RelativeLayout>