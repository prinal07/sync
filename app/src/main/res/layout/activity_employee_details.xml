<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CeoSignUp"
    android:background="@color/primaryColor">




    <EditText
        android:id="@+id/employeeEmailID"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter email Id"
        android:fontFamily="@font/inter"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="249dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/employeeName"
        android:textColor="#FFF"
        android:textColorHint="#FFF"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FFF"/>

    <EditText
        android:id="@+id/employeeName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Name"
        android:fontFamily="@font/inter"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="249dp"
        android:layout_marginTop="150dp"
        android:textColor="#FFF"
        android:textColorHint="#FFF"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FFF"
        />

    <EditText
        android:id="@+id/employeePass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Password"
        android:textColor="#FFF"
        android:textColorHint="#FFF"
        android:fontFamily="@font/inter"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="309dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/employeeEmailID"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FFF"
        />

    <EditText
        android:id="@+id/employeeNum"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Phone Number"
        android:textColor="#FFF"
        android:textColorHint="#FFF"
        android:fontFamily="@font/inter"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="309dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/employeePass"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FFF"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fontFamily="@font/robotbold"
        android:text="Employee Sign Up"
        android:textColor="#FFF"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:textAlignment="center">

    </TextView>

    <Spinner
        android:id="@+id/field"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/employeeNum"
        android:background="@color/secondary"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        android:spinnerMode="dropdown"/>



    <Button
        android:id="@+id/employeeSignUpbtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="210dp"
        android:layout_below="@id/field"
        android:layout_marginTop="30dp"
        android:background="@drawable/button1"
        android:fontFamily="@font/inter"
        android:text="Sign Up"
        android:textColor="#FFF"
        />



</RelativeLayout>