<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CashNCarry"
    android:background="@drawable/gradient_cashncarry">

    <TextView
        android:id="@+id/cashncarry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cash N' Carry"
        android:fontFamily="@font/lovelo"
        android:textSize="50dp"
        android:gravity="center"
        android:layout_margin="20dp"
        android:textColor="#000"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cashncarry_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cashncarry"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        tools:listitem="@layout/cashncarrylist"
        android:layout_above="@id/toolbar4"

        />

    <ImageButton
        android:id="@+id/addItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_add_circle_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="20dp"
        />

    <LinearLayout
        android:id="@+id/toolbar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:weightSum="4"
        >

        <ImageButton
            android:id="@+id/homebtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_home_black_24dp"
            android:background="#00000000"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/targetsbtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_attach_money_black_24dp"
            android:background="#00000000"
            android:layout_weight="1"
            />

        <ImageButton
            android:id="@+id/chatbtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_textsms_black_24dp"
            android:background="#00000000"
            android:layout_weight="1"
            />

        <ImageButton
            android:id="@+id/groupworkbtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_shopping_cart_24"
            android:background="#00000000"
            android:layout_weight="1"
            />




    </LinearLayout>
</RelativeLayout>